{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "rootDir": "src",       
    "outDir": "dist",      
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
